mixin contacts(header, linkName,link)
  article.contact-item
    h4.contact-header=header
    a.contact-link(href=link)=linkName

article#reviews-block
  h2.section-title="оставьте отзыв"
  div.separator
  p.reviews-header-describe="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut."
  section.reviews-contacts
    section.contacts-group
      +contacts("наш адрес", "г.Минск, ул. Скрыганова, 6А, 4 этаж", "https://www.google.by/maps/place/%D1%83%D0%BB.+%D0%A1%D0%BA%D1%80%D1%8B%D0%B3%D0%B0%D0%BD%D0%BE%D0%B2%D0%B0+6%D0%B0,+%D0%9C%D0%B8%D0%BD%D1%81%D0%BA/@53.9106004,27.5150178,17z/data=!4m5!3m4!1s0x46dbc55eac1f56b1:0x608821dc8d7c0b1!8m2!3d53.9105873!4d27.5168252")
      +contacts("звоните", "+375 (29) 123-45-67,  +375 (33) 123-45-67", "href")
      +contacts("пишите", "info@promo-webcom.by", "mailto:info@promo-webcom.by")
    section.reviews
      form( action="#" name="add-review", method="post").review-form
        fieldset.form-fieldset
          label(for "name").form-item="ваше имя"
          input( type="text" name="name" class="inp" placeholder="Иван Иванов" required)
        fieldset.form-fieldset
          label(for "email").form-item="e-mail"
          input( type="email" name="email" class="inp" placeholder="example@mysite.com" required)
        fieldset.form-fieldset
          label(for "position").form-item="ваша должность"
          input( type="text" name="position" class="inp" placeholder="Должность")
        fieldset.form-fieldset
          label(for "message").form-item="отзыв"
          textarea( rows="5" name="message" class="inp" placeholder="ваше сообщение" required).review-comment
        div.fieldset-img-button
          input(type="file" name="file-upload" accept="image/*")#file-upload
          label( for="file-upload").form-item.custom-file-upload
          label( for="file-upload").image-button-title="фото"
        label(for "captcha-code").form-item.captcha-label="введите код с картинки"
        input( type="text" name="code" class="inp" required).captcha-code
        div.fieldset-submit-button
          img.captcha
          button( type="submit" name="submit" ).submit-button="отправить"
  div#pg-up
    a.custom-item.scroll-up(href="#header")