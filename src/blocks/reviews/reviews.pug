mixin contacts(header, linkName,link)
  article.contact_item
    h4.contact_header=header.toUpperCase()
    a.contact_link(href=link)=linkName

article#reviews_block
  h2.reviews_header="оставьте отзыв".toUpperCase()
  div.separator
  p.reviews_header_describe="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut."
  section.reviews_contacts
    section.contacts_group
      +contacts("наш адрес", "г.Минск, ул. Скрыганова, 6А, 4 этаж", "https://www.google.by/maps/place/%D1%83%D0%BB.+%D0%A1%D0%BA%D1%80%D1%8B%D0%B3%D0%B0%D0%BD%D0%BE%D0%B2%D0%B0+6%D0%B0,+%D0%9C%D0%B8%D0%BD%D1%81%D0%BA/@53.9106004,27.5150178,17z/data=!4m5!3m4!1s0x46dbc55eac1f56b1:0x608821dc8d7c0b1!8m2!3d53.9105873!4d27.5168252")
      +contacts("звоните", "+375 (29) 123-45-67,  +375 (33) 123-45-67", "href")
      +contacts("пишите", "info@promo-webcom.by", "mailto:info@promo-webcom.by")
    section.reviews
      form( action="#" name="add-review", method="post").review_form
        label(for "name").form_item="ваше имя".toUpperCase()
        input( type="text" name="name" class="inp" placeholder="Иван Иванов" required)
        label(for "email").form_item="e-mail".toUpperCase()
        input( type="email" name="email" class="inp" placeholder="example@mysite.com" required)
        label(for "position").form_item="ваша должность".toUpperCase()
        input( type="text" name="position" class="inp" placeholder="Должность")
        label(for "message").form_item="отзыв".toUpperCase()
        textarea( rows="5" name="message" class="inp" placeholder="ваше сообщение" required).reviev_comment
        div.fieldset_img_button
          input(type="file" name="file_upload" accept="image/*")#file_upload
          label( for="file_upload").form_item.custom_file_upload
          label( for="file_upload").form_item="фото".toUpperCase()
        label(for "captcha_code").form_item="введите код с картинки".toUpperCase()
        input( type="text" name="code" class="inp" required).captcha_code
        div.fieldset_submit_button
          img.captcha
          button( type="submit" name="submit" ).submit_button="отправить".toUpperCase()
  div#pg_up
    a.scroll_up(href="#header")
